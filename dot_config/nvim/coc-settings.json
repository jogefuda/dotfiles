{
    "languageserver": {
        "clang": {
            "command": "clangd",
            "filetypes": [
                "c", "cpp", "objc", "objcpp"
            ],
            "rootPatterns": [
                "compile_commands.json", ".vim/", ".git/", ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/clangd"
                }
            }
        }
    },
    "explorer.icon.enableNerdfont": true,
    "explorer.width": 32
}
